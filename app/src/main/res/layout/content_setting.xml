            android:layout_height="match_parent"
            android:src="@drawable/product_tag_badge"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="6dp"
            android:background="@drawable/btn_selector" />

    </RelativeLayout>

